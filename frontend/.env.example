# PerpDEX Frontend Configuration
# Copy this file to .env.local and configure for your environment

# ===========================================
# API Configuration
# ===========================================

# Backend API URL (for trading operations)
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket URL (for real-time updates)
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ===========================================
# Hyperliquid API (Market Data)
# ===========================================

# Hyperliquid REST API (for prices, orderbook, klines)
NEXT_PUBLIC_HL_API_URL=https://api.hyperliquid.xyz/info

# Hyperliquid WebSocket (for real-time market data)
NEXT_PUBLIC_HL_WS_URL=wss://api.hyperliquid.xyz/ws

# Enable Hyperliquid for market data (default: true)
NEXT_PUBLIC_USE_HYPERLIQUID=true

# ===========================================
# Chain Configuration (Cosmos SDK Backend)
# ===========================================

# RPC URL
NEXT_PUBLIC_RPC_URL=http://localhost:26657

# REST API URL
NEXT_PUBLIC_REST_URL=http://localhost:1317

# Chain ID
NEXT_PUBLIC_CHAIN_ID=perpdex-local-1

# ===========================================
# Wallet Configuration
# ===========================================

# Preferred wallet provider: metamask (default), keplr, mock
NEXT_PUBLIC_WALLET_PROVIDER=metamask

# ===========================================
# Feature Flags
# ===========================================

# Enable mock mode (development only - DO NOT use in production)
# When true, uses mock wallet instead of real MetaMask/Keplr
NEXT_PUBLIC_MOCK_MODE=false

# Use real matching engine (requires API server with --real flag)
NEXT_PUBLIC_USE_REAL_ENGINE=true

# ===========================================
# Production Configuration Example
# ===========================================
# For production deployment, use these settings:
#
# NEXT_PUBLIC_API_URL=https://api.perpdex.io
# NEXT_PUBLIC_WS_URL=wss://api.perpdex.io/ws
# NEXT_PUBLIC_MOCK_MODE=false
# NEXT_PUBLIC_USE_REAL_ENGINE=true
# NEXT_PUBLIC_WALLET_PROVIDER=metamask
